<style>
  header,
  main {
    padding-inline: var(--spacing-200);
    @media screen and (min-width: 792px) {
      padding-inline: 0;
    }
  }

  header {
    background: linear-gradient(
      180deg,
      var(--cyan-100) 0%,
      var(--cyan-500) 100%
    );
    padding: var(--spacing-800) var(--spacing-600);

    p {
      margin-block: var(--spacing-400);
      font-size: var(--font-500);
    }

    a {
      display: block;
      text-align: center;
      padding-top: var(--spacing-600);
      button {
        background-color: var(--cyan-950);
        color: var(--white);
      }
    }
  }

  #foundation {
    margin-block: var(--spacing-400);

    > div > div {
      display: flex;
      flex-direction: column;
      position: relative;
      margin: var(--spacing-400) var(--spacing-600);

      a {
        text-decoration: underline dotted var(--magenta-500);
        font-size: var(--font-400);
        font-weight: 400;
        padding: var(--spacing-200);
        color: var(--magenta-700);
        align-self: end;
        transition: all 200ms;
        display: flex;
        align-items: center;

        > svg {
          margin-right: var(--spacing-50);
        }

        &:hover {
          background-color: var(--magenta-100);
          color: var(--magenta-950);
          box-shadow: 0 2px 2px var(--shadow-color);
        }
      }

      h3 {
        line-height: var(--spacing-600);
        margin: 0;
        color: var(--magenta-800);
        display: flex;
        align-items: center;
        > svg {
          margin-right: var(--spacing-100);
        }
      }

      p {
        margin: 0;
        font-size: var(--font-400);
      }
    }

    @media screen and (min-width: 768px) {
      > .container {
        display: flex;
        flex-direction: row;
        gap: var(--spacing-400);

        > div {
          margin: 0;
          flex: 1;

          h3 {
            font-size: var(--font-400);
          }

          p {
            margin-block: var(--spacing-200);
            padding-inline: var(--spacing-200);
            min-height: 200px;
            font-size: var(--font-300);
          }

          a {
            align-self: start;

            > svg {
              margin-right: var(--spacing-200);
            }
          }
        }
      }
    }

    @media screen and (min-width: 960px) {
      > .container > div p {
        min-height: 140px;
      }
    }
  }
</style>
