  <style>
    a:has(img) {
      display: block;
      text-align: center;
    }

    p {
      margin-block: var(--spacing-600);
    }

    h2 {
      text-align: center;
      margin-bottom: var(--spacing-400);
    }
  </style>
  <script is:inline src="https://opencollective.com/amplifying-fsharp/banner.js"
  ></script>
  <style is:global>
    .opencollective-banner {
      margin-top: var(--spacing-400);
