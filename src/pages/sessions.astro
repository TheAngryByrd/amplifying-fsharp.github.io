---
import PageLayout from "../layouts/PageLayout.astro";
import SessionsGrid from "../components/SessionsGrid.jsx";

import { getCollection } from "astro:content";
const sessions = await getCollection("sessions");
---

<PageLayout
  title="Sessions"
  backgroundImage="/images/sessions-header.jpg"
  mainTitle="Sessions"
  containerClass="container-fluid"
>
  <SessionsGrid client:load sessions={sessions} />
</PageLayout>
<style is:global>
  #past-sessions {
    display: grid;
    grid-template-columns: repeat(auto-fill, 320px);
    grid-row-gap: 1rem;
    grid-column-gap: 1rem;
  }

  #past-sessions > a {
    display: block;
    text-decoration: none;
    color: white;
    height: 180px;
    width: 320px;
    margin: 0;
    position: relative;
    padding: 0.75rem;
  }
  #past-sessions div .overlay {
    background-color: rgba(0, 0, 0, 0.2);
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  #past-sessions a h3 {
    position: relative;
    z-index: 2;
    font-size: 1.4rem;
  }

  #past-sessions a h4 {
    position: absolute;
    bottom: 0.5rem;
    right: 0.5rem;
    margin: 0;
    font-size: 0.8rem;
  }

  #no-new-sessions {
    background: firebrick;
    display: block;
    width: 300px;
    color: white;
    font-size: 1.2rem;
    padding: 1rem;
    border-radius: 6px;
    margin: auto auto 2rem;
    text-align: center;
  }

  #no-new-sessions a {
    color: #2d3436;
  }

  #upcoming-sessions {
    display: grid;
    grid-template-columns: repeat(auto-fill, 320px);
    grid-row-gap: 1rem;
    grid-column-gap: 1rem;
    margin-bottom: 2rem;
  }

  #upcoming-sessions a {
    height: 180px;
    width: 320px;
    padding: 1rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  @media screen and (min-width: 600px) {
    #upcoming-sessions {
      grid-template-columns: repeat(auto-fill, 420px);
    }

    #upcoming-sessions a {
      width: 420px;
      height: 260px;
    }
  }

  #upcoming-sessions a h3 {
    font-size: 2rem;
    margin: 0;
  }

  #upcoming-sessions a div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #upcoming-sessions a h4 {
    font-size: 1rem;
    margin: 0;
  }

  #upcoming-sessions a time {
    font-weight: bold;
    font-size: 1rem;
  }

  #upcoming-sessions a:nth-child(3n + 1) {
    background-color: #bae4e5;
    color: white;
  }

  #upcoming-sessions a:nth-child(3n + 2) {
    background-color: #eaf2d7;
    color: black;
  }

  #upcoming-sessions a:nth-child(3n + 3) {
    background-color: #d24d57;
    color: white;
  }
</style>
