---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import logo from "../images/nav-logo.jpg";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.replaceAll("/", "");
---

<nav>
  <a href="/">
    <Image src={logo} alt="Amplifying F# logo" height="30px" />
  </a>
  <Icon pack="ri" name="menu-fill" width="30px" height="30px" />
  <input type="checkbox" name="mobile-menu" />
  <ul>
    <li>
      <a
        href="/blog"
        id="blog-link"
        class={currentPath === "blog" ? "active" : ""}>Blog</a
      >
    </li>
    <li>
      <a href="/incitation"> Incitation</a>
    </li>
    <li>
      <a
        href="/sessions"
        id="sessions-link"
        class={currentPath === "sessions" ? "active" : ""}>Sessions</a
      >
    </li>
    <li>
      <a href="/faq" class={currentPath === "faq" ? "active" : ""}>FAQ</a>
    </li>
    <li>
      <a
        href="/join-us"
        id="join-us-link"
        class={currentPath === "join-us" ? "active" : ""}>Join us!</a
      >
    </li>
  </ul>
</nav>
<style>
  nav {
    padding: var(--spacing-200);
    background-color: var(--key-950);
    color: var(--white);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto 0fr;
    grid-column-gap: 0;
    grid-row-gap: 0;
    position: relative;
    transition: grid-template-rows 250ms;

    > a {
      display: block;
      height: 30px;

      img {
        filter: invert(100%);
        height: 30px;
        grid-area: 1 / 1 / 2 / 2;
      }
    }

    svg {
      grid-area: 1 / 2 / 2 / 3;
      justify-self: end;
    }

    input[type="checkbox"] {
      position: absolute;
      width: 50%;
      height: 100%;
      left: 50%;
      top: 0;
      appearance: none;
      cursor: pointer;
    }

    ul {
      overflow: hidden;
      grid-area: 2 / 1 / 3 / 3;
      visibility: collapse;
      transition: all 250ms;
      max-height: 0;
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin: 0;
      }

      a {
        padding-block: var(--spacing-100);
        display: inline-block;
        text-decoration: none;
        color: white;
        font-weight: 500;
        text-transform: uppercase;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 0.1em;
          background-color: var(--white);
          transition:
            opacity 300ms,
            transform 300ms;
          opacity: 0;
          transform: scale(0);
          transform-origin: center;
        }

        &:hover::after,
        &:focus::after {
          transform: scale(1);
          opacity: 1;
        }

        &.active::after {
          content: "";
          position: absolute;
          bottom: 0;
          left: 25%;
          width: 50%;
          height: 0.1em;
          background-color: var(--white);
          transition:
            opacity 300ms,
            transform 300ms;
          opacity: 1;
          transform: scale(1);
          transform-origin: center;
        }
      }

      #blog-link {
        color: var(--magenta-300);
        &::after {
          background-color: var(--magenta-200);
        }
      }

      #join-us-link {
        color: var(--cyan-200);
        &::after {
          background-color: var(--cyan-100);
        }
      }

      #sessions-link {
        color: var(--yellow-300);
        &::after {
          background-color: var(--yellow-200);
        }
      }
    }

    &:has(input[type="checkbox"]:checked) {
      grid-template-rows: auto 1fr;

      ul {
        margin-top: var(--spacing-200);
        visibility: visible;
        max-height: initial;
      }
    }

    @media screen and (min-width: 768px) {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--spacing-200) var(--spacing-400);

      > svg,
      input[type="checkbox"] {
        display: none;
      }

      ul {
        display: flex;
        visibility: visible;
        max-height: initial;
        margin: 0;
        gap: var(--spacing-300);

        li::after {
          content: "|";
          margin-left: var(--spacing-300);
        }

        li:last-child::after {
          content: none;
        }
      }

      &:has(input[type="checkbox"]:checked) ul {
        margin-top: 0;
      }
    }
  }
</style>
