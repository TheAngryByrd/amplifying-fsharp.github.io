---
import { Icon } from "astro-icon";
const footerIcons = [
  {
    link: "https://twitter.com/amplifyfsharp",
    text: "amplifyfsharp",
    icon: "ion:logo-twitter",
    color: "#1DA1F2",
  },
  {
    link: "https://mastodon.social/@amplifyingfsharp",
    text: "@amplifyingfsharp",
    icon: "simple-icons:mastodon",
    color: "#6364ff",
  },
  {
    link: "https://www.youtube.com/@amplifyingfsharp",
    text: "@amplifyingfsharp",
    icon: "uil:youtube",
    color: "#ff0000",
  },
  {
    link: "https://github.com/amplifying-fsharp/",
    text: "amplifying-fsharp",
    icon: "uil:github",
  },
];
---

<footer>
  <div class="container">
    {
      footerIcons.map(({ link, text, icon, color }) => (
        <a href={link} target="_blank" class="text-white text-decoration-none">
          <Icon name={icon} width="24" height="24" color={color} />
          <span class="d-none d-md-inline-block">{text}</span>
        </a>
      ))
    }
  </div>
</footer>
<style>
  footer {
    background-color: var(--key);

    > div {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
      padding-block: var(--spacing-100);

      & a {
        display: flex;
        text-decoration: none;
        padding: var(--spacing-100) var(--spacing-200);
        color: var(--white);
        transition:
          border-color 200ms,
          color 250ms;
        outline: 2px solid var(--key);
        border-radius: var(--radius);

        & svg {
          margin-right: var(--spacing-200);
        }

        &:hover {
          outline-color: var(--cyan-500);
          background-color: var(--cyan-50);
          color: var(--key);
        }
      }
    }
  }
</style>
