---
import { Icon } from "astro-icon";
import "../styles/style.sass";

const { title } = Astro.props;
const footerIcons = [
  {
    link: "https://twitter.com/amplifyfsharp",
    text: "amplifyfsharp",
    icon: "ion:logo-twitter",
    color: "#1DA1F2",
  },
  {
    link: "https://mastodon.social/@amplifyingfsharp",
    text: "@amplifyingfsharp",
    icon: "simple-icons:mastodon",
    color: "#6364ff",
  },
  {
    link: "https://www.youtube.com/@amplifyingfsharp",
    text: "@amplifyingfsharp",
    icon: "uil:youtube",
    color: "#ff0000",
  },
  {
    link: "https://github.com/amplifying-fsharp/",
    text: "amplifying-fsharp",
    icon: "uil:github",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-3D96369PRB"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-3D96369PRB");
    </script>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{title} | Amplifying F&#35;</title>
    <link rel="icon" href="/favicon.ico?v4" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-md bg-transparent">
      <div class="container-fluid">
        <a class="navbar-brand mb-0 h1" href="/">
          <img
            style="width:auto; max-height: 40px"
            src="/images/nav-logo.jpg"
            alt="Amplifying F# logo inside the navigation menu"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarToggler"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarToggler"
        >
          <div class="navbar-nav">
            <a class="nav-link" aria-current="page" href="/blogentries">Blog</a>
            <a class="nav-link" aria-current="page" href="/incitation"
              >Incitation</a
            >
            <a class="nav-link" aria-current="page" href="/sessions">Sessions</a
            >
            <a class="nav-link" aria-current="page" href="/faq">FAQ</a>
            <a class="nav-link" href="/join-us">Join us!</a>
          </div>
        </div>
      </div>
    </nav>
    <div>
      <slot />
    </div>
    <footer class="bg-dark text-white py-2">
      <div class="container d-flex justify-content-between align-items-center">
        {
          footerIcons.map(({ link, text, icon, color }) => (
            <a
              href={link}
              target="_blank"
              class="text-white text-decoration-none"
            >
              <Icon name={icon} width="24" height="24" color={color} />
              <span class="d-none d-md-inline-block">{text}</span>
            </a>
          ))
        }
      </div>
    </footer>
  </body>
</html>
<script>
  import { Collapse } from "https://cdn.skypack.dev/bootstrap@5.3.0-alpha1";
  new Collapse("#navbarToggler", { toggle: false });
</script>
